<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |n| %>

  <p>Title</p>
  <%= n.text_field :title %>

  <p>Body</p>
  <%= n.text_area :body %>

  <p><%= n.submit "Update Book" %></p>

  <p><%= link_to "Show", book_path(@book.id) %><%= " |" %>
  <%= link_to "Back", "/books" %></p>

<% end %>